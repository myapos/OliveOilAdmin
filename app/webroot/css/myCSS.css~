/* --------------------------------------
   Media Queries
   -------------------------------------- */

/* Portrait & landscape phone */
@media (max-width: 480px) {
	
	.thumbnail .price {
		font-size: 14px;
	}
	
	.thumbnail .price sup {
		font-size: 10px;
	}
	
}

/* Landscape phone to portrait tablet */
@media (max-width: 768px) {
	
	#myCarousel .item { height: 310px; }
	
	#slide1 {
		background: url('../img/medium/OliveMedium.jpg') top center no-repeat;
	}
	
	#slide2 {
		background: url('../img/medium/OliveTreeLiveMedium.jpg') top center no-repeat;
	}
	
	#slide3 {
		background: url('../img/medium/OliveTreesOnThassosMedium.jpg') top center no-repeat;
	}
	
	.carousel-caption {
		font-size: 16px;
	}
	
	.carousel-caption h4 {
		font-size: 22px;
	}
	
}

/* Large desktop */
